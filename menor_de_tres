Algoritmo "menor_de_tres"

Var
num1, num2, num3:inteiro
Inicio
escreva("Primeiro valor: ")
leia(num1)
escreva("Segundo valor: ")
leia(num2)
escreva("Terceiro valor: ")
leia(num3)
escreva

se (num1 = num2) ou (num2 = num3) entao
   escreva("Valor MENOR Igual = ",num1)
   senao
        se num1 < num2 entao
           escreva("Primeiro valor MENOR = ",num1)
           senao
                se num2 < num3 entao
                   escreva("Segundo valor MENOR = ",num2)
                   senao
                        escreva("Terceiro valor MENOR = ",num3)
                   Fimse
           Fimse
   Fimse

Fimalgoritmo
